[
  {
    "name": "ms-order",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      },
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "memory": 300,
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ms-order"
      }
    },
    "environment": [
      {
        "name": "DB_USER",
        "value": "${db_username}"
      },
      {
        "name": "DB_PASSWORD",
        "value": "${db_password}"
      },
      {
        "name": "AWS_REGION",
        "value": "${aws_region}"
      },
      {
        "name": "DB_NAME",
        "value": "${database_name}"
      },
      {
        "name": "SECRET_KEY_JWT_TOKEN",
        "value": "${secret_key_jwt_token}"
      },
      {
        "name": "PORT",
        "value": "3000"
      },
      {
        "name": "AWS_SESSION_TOKEN",
        "value": "${session_token_aws}"
      },
      {
        "name": "AWS_ACCESS_KEY",
        "value": "${access_key_aws}"
      },
      {
        "name": "AWS_SECRET",
        "value": "${secret_aws}"
      },
      {
        "name": "DB_HOST",
        "value": "${db_host}"
      },
      {
        "name": "AWS_OUTPUT_PAYMENT_QUEUE_RECEIVED_URL",
        "value": "${payment_queue_received}"
      },
      {
        "name": "AWS_INPUT_PAYMENT_QUEUE_PROCESSED_URL",
        "value": "${payment_queue_processed}"
      },
      {
        "name": "AWS_OUTPUT_ORDER_QUEUE_RECEIVED_URL",
        "value": "${order_received}"
      },
      {
        "name": "AWS_INPUT_ORDER_QUEUE_FINISHED_URL",
        "value": "${queue_finished_sqs_url}"
      },
      {
        "name": "AWS_OUTPUT_PAYMENT_STATUS_NOTIFICATION_URL",
        "value": "${payment_status_notification}"
      },
      {
        "name": "MSG_POLLING_INTERVAL",
        "value": "${sqs_polling_interval}"
      },
      {
        "name": "AWS_MESSAGE_GROUP",
        "value": "${sqs_message_group}"
      }
    ],
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:3000/api-docs/#/ || exit 1"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    }
  }
]